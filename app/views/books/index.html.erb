<h1>Books</h1>

<table class="table table-hover">
  <tr>
    <th>Rank</th>
    <th>Book</th>
    <th>Author</th>
    <th>Description</th>
    <th>Upvote</th>



  </tr>

  <% @books.each do |book|%>
  <tr>

    <td><%= book.votes %></td>
    <td><%= link_to(book.name, book_path(book.id))  %></td>
    <td><%= book.creator %></td>
    <td><%= book.description %></td>
    <td><%= button_to "upvote", book_path(book.id), {class: 'btn btn-info'} %></td>

  </tr>

  <% end %>

</table>

<%= link_to "New Book", new_book_path, class: 'btn btn-success' %>
