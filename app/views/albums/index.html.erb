<h1>Albums</h1>

<table class="table table-hover">
  <tr>
    <th>Rank</th>
    <th>Album</th>
    <th>Author</th>
    <th>Description</th>
    <th>Upvote</th>



  </tr>

  <% @albums.each do |album|%>
  <tr>

    <td><%= album.votes %></td>
    <td><%= link_to(album.name, album_path(album.id))  %></td>
    <td><%= album.creator %></td>
    <td><%= album.description %></td>
    <td><%= button_to "upvote", album_path(album.id), {class: 'btn btn-info'} %></td>

  </tr>

  <% end %>

</table>

<%= link_to "New Album", new_album_path, class: 'btn btn-success' %>
