<h1><%= @movie.name %></h1>
<h4> <%= @movie.creator %> </h4>

<p><%= @movie.description %></p>

<h6> <%= @movie.votes %></h6>
<div class="buttons-above"><%= button_to "upvote", movie_path(@movie.id), {class: 'btn btn-info'} %></div>

<div class="buttons-show">
  <%= button_to "Edit #{@movie.name}", "/movies/#{@movie.id}/edit", class: 'btn btn-info' %>
  <%= button_to "Delete", movie_path, method: :delete, class: 'btn btn-danger' %>
  <%= link_to "All Movies", movies_index_path, class: 'btn btn-default' %>
  <%= link_to "View All Media", root_path, class: 'btn btn-default' %>

</div>
