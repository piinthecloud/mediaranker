<h1>Movies</h1>

<table class="table table-hover">
  <tr>
    <th>Rank</th>
    <th>Movie</th>
    <th>Director</th>
    <th>Description</th>
    <th>Upvote</th>



  </tr>

  <% @movies.each do |movie|%>
  <tr>

    <td><%= movie.votes %></td>
    <td><%= link_to(movie.name, movie_path(movie.id))  %></td>
    <td><%= movie.creator %></td>
    <td><%= movie.description %></td>
    <td><%= button_to "upvote", movie_path(movie.id), {class: 'btn btn-info'} %></td>

  </tr>

  <% end %>

</table>

<%= link_to "New Movie", new_movie_path, class: 'btn btn-success' %>
